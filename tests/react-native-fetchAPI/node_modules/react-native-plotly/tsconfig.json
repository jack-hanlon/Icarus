{
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist/types",
    "sourceMap": true,
    "jsx": "react-native",
    "lib": ["dom", "es2017"],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": "src/",
    "noEmitHelpers": true,
    "importHelpers": true,
    "strict": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.ts"]
}
